<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activities.ChooseGameActivity">

    <TextView
        android:id="@+id/NouvellePartie"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Nouvelle Partie"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/localGame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:text="Partie locale 2 joueurs"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/computerGame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:text="Partie contre l'ordinateur"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/onlineGame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:text="Partie En ligne"
        android:textColor="@color/black"
        android:textSize="20sp" />


</LinearLayout>