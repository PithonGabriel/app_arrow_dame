<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.DisplayBoardActivity">


    <Button
        android:id="@+id/endTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf= "@id/board"
        android:layout_centerVertical="true"
        android:text="Fin de Tour"
        android:textSize="25sp"
        android:layout_marginRight="50dp"
        tools:ignore="NotSibling" />

    <Button
        android:id="@+id/endTurn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf= "@id/board"
        android:layout_centerVertical="true"
        android:text="Fin de Tour"
        android:textSize="25sp"
        android:rotation="180"
        android:layout_marginLeft="50dp"
        tools:ignore="NotSibling" />


    <RelativeLayout
        android:id="@+id/board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <RelativeLayout
            android:id="@+id/possibilites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="187dp"
        android:layout_y="575dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/nb_jump_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/endTurn1"
        android:rotation="180"
        android:layout_x="187dp"
        android:layout_y="654dp"
        android:text="TextView"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/nb_jump_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/endTurn"
        android:layout_alignParentBottom="true"
        android:layout_x="500dp"
        android:layout_y="606dp"
        android:text="TextView"
        android:textSize="20sp"/>


</RelativeLayout>